{
  "appId": "com.avilasha.desktop",
  "productName": "Avilasha",
  "directories": {
    "output": "dist_electron"
  },
  "files": [
    "dist/**/*",
    "electron/**/*"
  ],
  "win": {
    "target": ["nsis"],
    "icon": "public/Avilasha.svg"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true
  },
  "mac": {
    "target": ["dmg"],
    "icon": "public/Avilasha.svg"
  },
  "linux": {
    "target": ["AppImage"],
    "icon": "public/Avilasha.svg"
  }
}